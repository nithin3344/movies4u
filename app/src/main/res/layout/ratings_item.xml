<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="7dp"
    android:layout_marginLeft="25dp"
    android:layout_marginRight="25dp"
    android:elevation="600dp"
    app:cardUseCompatPadding="true"
    android:outlineSpotShadowColor="@color/black">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:backgroundTint="@color/black"
        android:outlineAmbientShadowColor="@color/black"
        android:padding="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/logo_color"
            >

            <TextView
                android:id="@+id/titletext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="3dp"
                android:padding="5dp"
                android:text="Title :"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:textSize="20dp"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/img1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:backgroundTint="@color/black"
            android:src="@drawable/cannot_load_item"
            android:adjustViewBounds="true"
            app:civ_border_color="@color/black"
            app:civ_border_width="20dp" />


        <TextView
            android:id="@+id/descriptiontext"
            android:background="#1000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:padding="5dp"
            android:text="Description of the post"
            android:textColor="#100"
            android:textSize="15dp"
            />

        <ImageView
            android:id="@+id/speech_bubble"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_toRightOf="@+id/heartLayout"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_speech_bubble_comment"
            android:visibility="visible"
            android:layout_centerVertical="true"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/relLayout3"
            android:layout_below="@+id/relLayout2"
            android:padding="5dp"
            android:paddingLeft="10dp"
            android:layout_marginBottom="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View all 3 comments"
                android:textColor="@color/grey"
                android:textSize="15sp"
                android:id="@+id/image_comments_link"
                android:layout_marginTop="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3 DAYS AGO"
                android:textColor="@color/grey"
                android:textSize="15sp"
                android:layout_below="@+id/image_comments_link"
                android:id="@+id/image_time_posted"
                android:layout_marginTop="5dp"/>

        </RelativeLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>